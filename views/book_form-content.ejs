<%= title %>
<form action="" method="post">
    <div class="form-group">
        <label for="title">Title:</label>
        <!-- prettier-ignore -->
        <input id="title" class="form-control" type="text" placeholder="Name of book" name="title" required="true"  
        value="<% if (typeof book == "undefined") { %><% } else { %><%=book.first_name %><% } %>" />
    </div>
    <div class="form-group">
        <label for="author">Author:</label>
        <!-- prettier-ignore -->
        <select id="author" class="form-control" type="select" placeholder="Select author" name="author" required="true">

        <% authors.sort(function(a, b) {let textA = a.family_name.toUpperCase();
        let textB = b.family_name.toUpperCase(); /* prettier-ignore */ return
        (textA < textB) ? -1 : (textA > textB) ? 1 : 0;}); %>
        <!-- prettier-ignore -->
        <% for(const author of authors) {%>
            <% if (typeof book != "undefined") { %>
        <option
            value="author._id"
            selected="<% author._id.toString()===book.author._id.toString() ? 'selected' : false %> "
        >
            <%= author.name %>
        </option>
        <% } else {%>
        <option value="<%=author.id %> "><%=author.name %></option>
        <% } %> <% } %>
        </select>
    </div>

    <div class="form-group">
        <label for="author">Summary:</label>
        <!-- prettier-ignore -->
        <textarea
            id="summary"
            class="form-control"
            name="summary"
            placeholder="Summary"
            required="true"
        ><% if (typeof book == "undefined") { %><% } else { %> <%=book.summary%><% } %></textarea>
    </div>
    <!-- prettier-ignore -->
    <div class="form-group">
        <label for="isbn">ISBN:</label>
        <input id="isbn" class="form-control" name="isbn" type="text" placeholder="ISBN13"
        required="true"
        value="<% if (typeof book == "undefined") { %><% } else { %><%=book.isbn %><% } %>" />
    </div>

    <div class="form-group">
        <label for="genre">Genre:</label>
        <div>
            <% for(const genre of genres) {%>
            <div style="display: inline; padding-right: 10px">
                <input
                    id="genre._id"
                    class="checkbox-input"
                    type="checkbox"
                    name="genre"
                    value="genre._id"
                    checked="genre.checked"
                />
                <label for="genre._id"><%=genre.name %> </label>
            </div>
            <% } %>
        </div>
    </div>
    <button class="btn btn-primary" type="submit">Submit</button>
</form>

<% if (typeof errors != 'undefined') { %>
<ul>
    <% for(const error of errors) {%>
    <li><%=error.msg%></li>

    <% } %>
</ul>
<% } %>
