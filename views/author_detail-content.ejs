<h1>Author: <%=author.name%></h1>
<p><%=author.lifespan%></p>
<div style="margin-left: 20px; margin-top: 20px">
    <h4>Books</h4>
</div>
<ul>
    <% if(author_books.length > 0){ %> <% for(const book of author_books) {%>
    <li>
        <strong><a href="<%=book.url%>"><%=book.title%></a></strong>
    </li>
    <section><%=book.summary%></section>

    <% } %>
</ul>
<% } else { %>
<p>This author has no books</p>

<% } %>
